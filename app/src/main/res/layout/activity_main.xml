<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.android.healthkeeper.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Goal"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <EditText
        android:id="@+id/goal_EditText"
        android:hint="100 push ups"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="#e0e0e0"
        android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/duration_EditText"
            android:hint="Enter number of hours"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="#e0e0e0"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Frequency"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/frequency_EditText"
            android:hint="2 (will notify you after every 2hrs)"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="#e0e0e0"
            android:textSize="24sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/set_Button"
        android:layout_width="150dp"
        android:layout_height="10dp"
        android:padding="0dp"
        android:text="set"
        android:textSize="24sp"
        android:textAllCaps="true"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"/>
</LinearLayout>
